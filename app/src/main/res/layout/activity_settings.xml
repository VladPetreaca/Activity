    <Button
        android:id="@+id/button10"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="287dp"
        android:layout_marginStart="450dp"
        android:background="@drawable/euro_3_3" />

    <Button
        android:id="@+id/button11"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="287dp"
