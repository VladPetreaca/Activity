<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gold_bars"
    tools:context=".Delete_PlayerFromTeam_PopUp">

    <FrameLayout
        android:layout_width="370dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/specified_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="#000"
            android:hint="Numele Echipei"
            android:textColor="#FFD700"
            android:textColorHint="#FFD700"/>

        <EditText
            android:id="@+id/delete_player_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_gravity="center_horizontal"
            android:background="#000"
            android:hint="Numele Jucatorului"
            android:textColor="#FFD700"
            android:textColorHint="#FFD700" />

        <Button
            android:id="@+id/button26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_horizontal"
            android:text="Elimina jucator"
            android:textColor="#000"
            android:background="@drawable/round_button" />
    </FrameLayout>

</RelativeLayout>